{
  "schema_version": "1.0.0",
  "contract_id": "mcp-benchmark-ci-performance",
  "tool_name": "benchmark-ci-performance",
  "description": "Measures and compares CI pipeline execution times between legacy and optimized workflows",
  "executable": "python scripts/benchmark-ci-performance.py",
  "language": "python",
  "capabilities": [
    "measure_execution_times",
    "compare_pipeline_performance",
    "track_performance_regression",
    "generate_performance_reports"
  ],
  "parameters": {
    "required": [],
    "properties": {
      "mode": {
        "type": "string",
        "description": "Benchmark mode to run",
        "enum": ["compare", "optimized", "legacy"],
        "default": "compare"
      },
      "output_format": {
        "type": "string",
        "description": "Output format for results",
        "enum": ["json", "yaml", "text"],
        "default": "json"
      },
      "timeout": {
        "type": "integer",
        "description": "Timeout in seconds for benchmark execution",
        "default": 300
      }
    }
  },
  "security": {
    "input_sanitization": true,
    "command_injection_protection": true,
    "timeout_enforcement": true,
    "privilege_isolation": true,
    "output_sanitization": true
  },
  "usage_examples": [
    "python scripts/benchmark-ci-performance.py --mode compare",
    "python scripts/benchmark-ci-performance.py --mode optimized --output-format json",
    "python scripts/benchmark-ci-performance.py --timeout 600"
  ],
  "created_date": "2025-07-25",
  "last_modified": "2025-07-25",
  "status": "active"
}
